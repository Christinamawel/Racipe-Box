@using RecipeBox.Models;
@model List<RecipeBox.Models.Recipe>;

<h1>Recipe Box</h1>
<h5>A place to store and share your recipes</h5>
<img src="~/img/veggies.png" />
<div class=shared>
  <h3>Shared Recipes</h3>
  
  @if(Model.Count != 0)
  {
    <ul>
      @foreach(Recipe recipe in Model)
      {
        <li>@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId }) | @recipe.Rating‚≠ê</li>
      }
    </ul>
  }
  else
  {
    <h3>No recipes have been added yet!</h3>
  }
</div>